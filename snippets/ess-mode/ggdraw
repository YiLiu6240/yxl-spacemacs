# -*- mode: snippet -*-
# name: ggdraw()
# --
p1 = df %>% ggplot()
p2 = df %>% ggplot()
plegend = (p2 + theme(legend.position="bottom")) %>% get_legend()
ptitle = "Product Sales"

ggdraw() +
    draw_plot(p1, 0.00, 0.50, 1.00, 0.45) +
    draw_plot(p2, 0.00, 0.05, 1.00, 0.45) +
    draw_plot(plegend, 0.00, 0.05, 1.00, 0.05) +
    draw_label(ptitle, 0.00, 0.95, 1.00, 0.05, fontface="bold")
